
<%- include("../partials/header") %>
<div class="container ">
<h1 style="text-align: center;margin-top: 1em;display: block;">Edit <%= data.title %></h1>



<form action="/camp/<%= data.id %>?_method=PUT" method="POST" style="width: 50%; margin: 0 auto;">
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input type="text"  name='camp[title]' class="form-control" value=<%= data.title %> >
      <input type="hidden" hidden  name='camp[id]' class="form-control" value=<%= data.author.id %> >
      
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Image url</label>
      <input type="text"  name='camp[image]' class="form-control" value=<%= data.image %>>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Описание</label>
      <input type="text"  name='camp[desc]' class="form-control" value=<%= data.desc %>>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
    <br/>
    <a href="/camp" style="margin-top: 1em; display: block;">Go back</a>
  </form>
 


<%- include("../partials/footer") %>
</div>